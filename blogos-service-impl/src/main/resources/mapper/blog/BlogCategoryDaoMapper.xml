<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.duan.blogos.service.dao.BlogCategoryDao">

    <select id="listCategoryById" resultType="com.duan.blogos.service.entity.BlogCategory">
        SELECT * FROM blog_category c WHERE c.id IN
        <foreach collection="ids"
                 item="item"
                 open="("
                 separator=","
                 close=")">
            #{item}
        </foreach>
    </select>

    <select id="listCategoryByBloggerId" resultType="com.duan.blogos.service.entity.BlogCategory">
        SELECT *
        FROM blog_category
        WHERE blogger_id = #{bloggerId}
    </select>

    <select id="getCategory" resultType="com.duan.blogos.service.entity.BlogCategory">
        SELECT *
        FROM blog_category
        WHERE id = #{value}
    </select>

    <select id="countByBloggerId" resultType="java.lang.Integer">
        SELECT count(*)
        FROM blog_category
        WHERE blogger_id = #{value}
    </select>

    <select id="getCategoryIdByTitle" resultType="java.lang.Long">
        select id
        from blog_category
        where title = #{title} and blogger_id = #{bloggerId}
    </select>

    <update id="update" parameterType="com.duan.blogos.service.entity.BlogCategory">
        UPDATE blog_category
        <set>
            <if test="bloggerId != null">
                blogger_id=#{bloggerId},
            </if>
            <if test="iconId != null">
                icon_id=#{iconId},
            </if>
            <if test="title != null">
                title=#{title},
            </if>
            <if test="bewrite != null">
                bewrite=#{bewrite},
            </if>
            <if test="createDate != null">
                create_date=#{createDate}
            </if>
        </set>

        <where>
            id=#{id}
        </where>

    </update>

    <delete id="delete">
        DELETE FROM blog_category
        WHERE id = #{id}
    </delete>

    <insert id="insert" parameterType="com.duan.blogos.service.entity.BlogCategory" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO blog_category (
        blogger_id,
        icon_id,
        title,
        bewrite,
        create_date
        ) VALUE (
        #{bloggerId},
        #{iconId},
        #{title},
        #{bewrite},
        NOW()
        )
    </insert>

</mapper>