<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.duan.blogos.service.dao.BlogLikeDao">

    <update id="update" parameterType="BlogLike">
        UPDATE blog_like
        <set>
            <if test="blogId != null">
                blog_id=#{blogId},
            </if>
            liker_id=#{likerId}
        </set>
        <where>
            id=#{id}
        </where>
    </update>

    <delete id="delete">
        DELETE
        FROM blog_like
        WHERE id = #{value}
    </delete>

    <delete id="deleteLikeByBloggerId">
        DELETE
        FROM blog_like
        WHERE blog_id = #{blogId}
          AND liker_id = #{bloggerId}
    </delete>

    <select id="listAllLikeByBlogId" resultType="BlogLike">
        SELECT *
        FROM blog_like
        WHERE blog_id = #{value}
    </select>

    <select id="countLikeByLikerId" resultType="java.lang.Integer">
        SELECT count(*)
        FROM blog_like
        WHERE liker_id = #{value}
    </select>

    <select id="getLike" resultType="BlogLike">
        SELECT *
        FROM blog_like
        WHERE blog_id = #{blogId}
          AND liker_id = #{bloggerId}
    </select>

    <select id="listLikeBlog" resultType="BlogLike">
        SELECT *
        FROM blog_like
        WHERE liker_id = #{bloggerId}
        order by ${sortRule.rule.code} ${sortRule.order.code}
    </select>

    <select id="listAllIdByBloggerId" resultType="BlogLike">
        SELECT blog_id
        FROM blog_like
        WHERE liker_id = #{value}
    </select>

    <insert id="insert" parameterType="BlogLike" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO blog_like (blog_id, liker_id, like_date)
        VALUE (#{blogId}, #{likerId}, NOW())
    </insert>

</mapper>