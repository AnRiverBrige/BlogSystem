<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.duan.blogos.service.dao.BloggerPictureDao">

    <select id="getPictureByCategory" resultType="com.duan.blogos.service.entity.BloggerPicture">
        SELECT *
        FROM blogger_picture p
        WHERE p.category = #{category} AND p.blogger_id = #{bloggerId}
    </select>

    <select id="getPictureById" resultType="com.duan.blogos.service.entity.BloggerPicture">
        SELECT *
        FROM blogger_picture
        WHERE id = #{value}
    </select>

    <select id="getBloggerUniquePicture" resultType="com.duan.blogos.service.entity.BloggerPicture">
        SELECT *
        FROM blogger_picture
        WHERE category = #{category} AND blogger_id = #{bloggerId}
    </select>

    <select id="listPictureByBloggerId" resultType="com.duan.blogos.service.entity.BloggerPicture">
        SELECT *
        FROM blogger_picture
        WHERE blogger_id = #{bloggerId}
    </select>

    <select id="listPictureByBloggerAndCategory" resultType="com.duan.blogos.service.entity.BloggerPicture">
        SELECT *
        FROM blogger_picture
        WHERE blogger_id = #{bloggerId} AND category = #{category}
    </select>

    <select id="getUseCount" resultType="java.lang.Integer">
        SELECT use_count
        FROM blogger_picture
        WHERE id = #{value}
    </select>

    <select id="getPictureByBloggerId" resultType="com.duan.blogos.service.entity.BloggerPicture">
        SELECT *
        FROM blogger_picture
        WHERE blogger_id = #{value}
    </select>

    <update id="update" parameterType="com.duan.blogos.service.entity.BloggerPicture">
        UPDATE blogger_picture
        <set>
            <if test="bloggerId != null">
                blogger_id=#{bloggerId},
            </if>
            <if test="bewrite != null">
                bewrite=#{bewrite},
            </if>
            <if test="category != null">
                category=#{category},
            </if>
            <if test="path != null">
                path=#{path},
            </if>
            <if test="title != null">
                title=#{title},
            </if>
            <if test="uploadDate != null">
                upload_date=#{uploadDate},
            </if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <update id="updateUseCountPlus">
        UPDATE blogger_picture
        SET use_count = use_count + 1
        WHERE id = #{value}
    </update>

    <update id="updateUseCountMinus">
        UPDATE blogger_picture
        SET use_count = use_count - 1
        WHERE id = #{value}
    </update>

    <delete id="delete">
        DELETE FROM blogger_picture
        WHERE id = #{value}
    </delete>

    <insert id="insert" parameterType="com.duan.blogos.service.entity.BloggerPicture" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO blogger_picture (
        blogger_id,
        bewrite,
        category,
        path,
        title,
        upload_date) VALUE (
        #{bloggerId},
        #{bewrite},
        ifnull(#{category}, 0),
        #{path},
        #{title},
        NOW())
    </insert>

</mapper>