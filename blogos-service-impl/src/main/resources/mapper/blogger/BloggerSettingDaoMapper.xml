<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.duan.blogos.service.dao.BloggerSettingDao">

    <update id="update" parameterType="com.duan.blogos.service.entity.BloggerSetting">
        UPDATE blogger_setting
        <set>
            <if test="mainPageNavPos != null">
                main_page_nav_pos=#{mainPageNavPos},
            </if>
        </set>
        <where>
            id=#{id}
        </where>
    </update>

    <update id="updateMainPageNavPos">
        UPDATE blogger_setting
        SET main_page_nav_pos = #{pos}
        WHERE blogger_id = #{bloggerId}

    </update>

    <delete id="delete">
        DELETE FROM blogger_setting
        WHERE id = #{value}
    </delete>

    <select id="getSetting" resultType="com.duan.blogos.service.entity.BloggerSetting">
        SELECT *
        FROM blogger_setting
        WHERE blogger_id = #{value}
    </select>

    <insert id="insert" parameterType="com.duan.blogos.service.entity.BloggerSetting" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO blogger_setting (
        blogger_id,
        main_page_nav_pos
        ) VALUE (
        #{bloggerId},
        #{mainPageNavPos}
        )
    </insert>

</mapper>